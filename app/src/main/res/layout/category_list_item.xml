<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#eeeeee">

        <ImageView
            android:id="@+id/iv_category"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="12dp"/>

        <FrameLayout
            android:id="@+id/container_category_text"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/category_main_text_bg">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Mountain"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </FrameLayout>

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/container_category_text"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:text="Find your best buy with Kartik Online"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:maxLines="2"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#ffffff"/>

</LinearLayout>